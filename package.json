{
  "name": "freebox-heartbeat",
  "version": "1.0.0",
  "description": "Freebox Delta monitoring system with heartbeat to remote server",
  "type": "module",
  "main": "dist/monitor.js",
  "scripts": {
    "start": "node --enable-source-maps dist/monitor.js",
    "authorize": "node --enable-source-maps dist/authorize.js",
    "test:api": "node --enable-source-maps dist/test-api.js",
    "test:api:dev": "tsx src/test-api.ts",
    "build": "tsc --project tsconfig.json",
    "watch": "tsc --watch --preserveWatchOutput --project tsconfig.json",
    "dev": "tsx watch src/monitor.ts",
    "lint": "tsc --noEmit --project tsconfig.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "prestart": "yarn build",
    "preauthorize": "yarn build",
    "pretest:api": "yarn build"
  },
  "keywords": [
    "freebox",
    "monitoring",
    "heartbeat",
    "uptime",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "dotenv": "^16.4.7"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "prettier": "^3.4.2",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "vitest": "^2.1.8"
  },
  "packageManager": "yarn@4.12.0"
}
